<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <h2>Cadastrar Usuário</h2></br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :nome %><br />
        <%= f.text_field :nome, autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>

      <!-- <div class="form-group">
        <%= f.label "Administrador?" %>
        <%= f.check_box :admin_role %>
      </div> -->
      <%= f.hidden_field :admin_role, value: false %>
      <%= f.hidden_field :user_role, value: true %>


      <div class="actions">
        <%= f.submit "Cadastrar", :class => "btn btn-primary" %>
      </div>
    <% end %>

  </div>
  <div class="col-md-4">
  </div>
</div>
