<%= form_for :julgamento, :url => julgamento_update_all_path(:projeto_id => @julgamentos.first.projeto_id), :html => { :method => :put } do %>

    <% @cri = '' %>
    <% @julgamentos.each do |j| %>
      <%= fields_for "j[]", j do |f| %>
      <% if j.criterio.nome != @cri %>
          <br/>
          <h2><%= j.criterio.nome %><h2/>
      <% end %>
      <%= j.alternativa_1.nome %> - <%= j.alternativa_2.nome %> : <%= f.text_field :valor  %>
      </br>
      <% @cri = j.criterio.nome %>
    <% end %>
    <% end %>
    <%= submit_tag %>

<% end %>
