<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title"><%= @projeto.nome %></h3>
      </div>
      <div class="panel-body">
          <%= @projeto.descricao %>
      </div>
    </div>
    </div>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th colspan="3">Alternativas</th>
        </tr>
      </thead>
    <tbody>
    <% @projeto.alternativas.each do |alternativa| %>
      <tr>
        <td><%= alternativa.nome %></td>
        <td><%= link_to 'Editar', edit_alternativa_path(alternativa, projeto_id: @projeto.id), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Excluir', alternativa, method: :delete, data: { confirm: 'Tem certeza de que quer excluir a alternativa?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
    <tr>
      <th colspan="3"><%= link_to 'Nova Alternativa', new_alternativa_path(projeto_id: @projeto.id), :class => "btn btn-primary" %></th>
    </tr>
    </tbody>
    </table>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th colspan="3">Criterios</th>
        </tr>
      </thead>
      <tbody>
        <% @projeto.criterios.each do |criterio| %>
          <tr>
            <td><%= criterio.nome %></td>
            <td><%= link_to 'Editar', edit_criterio_path(criterio, projeto_id: @projeto.id), :class => "btn btn-warning" %></td>
            <td><%= link_to 'Excluir', criterio, method: :delete, data: { confirm: 'Tem certeza de que quer excluir o critÃ©rio?' }, :class => "btn btn-danger"  %></td>
          </tr>
        <% end %>
        <tr>
          <th colspan="3"><%= link_to 'Novo Criterio', new_criterio_path(projeto_id: @projeto.id), :class => "btn btn-primary"   %></th>
        </tr>
      </tbody>
    </table>
  </div>
</div>


