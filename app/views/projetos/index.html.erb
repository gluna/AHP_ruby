<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-12">
        <h5>Projetos</h5>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Descrição</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @projetos.each do |projeto| %>
              <tr>
                <td><%= projeto.nome %></td>
                <td><%= projeto.descricao %></td>
                <td><%= link_to 'Detalhe', projeto, :class => "btn btn-primary" %></td>
                <td><%= link_to 'Editar', edit_projeto_path(projeto), :class => "btn btn-warning" %></td>
                <td><%= link_to 'Deletar', projeto, method: :delete, data: { confirm: 'Tem certeza de que quer excluir o projeto?' }, :class => "btn btn-danger" %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

<br>

<%= link_to 'Cadastrar Projeto', new_projeto_path, :class => "btn btn-primary" %>
